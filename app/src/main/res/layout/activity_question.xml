<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Вопрос 2/88"
            android:textSize="80px"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="0:55"
            android:textSize="80px"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/mainGreen"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="Тут типа какой-нибудь большой вопрос"
        android:textSize="80px"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/selectedYes"
        android:layout_width="300sp"
        android:textSize="70px"
        android:background="@color/mainGreen"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/yes" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/selectedNo"
        android:layout_width="300sp"
        android:textSize="70px"
        android:background="@color/mainGreen"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/no" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal">
        <ImageView android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ArrowBack"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/goNext"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ArrowNext"
            android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>